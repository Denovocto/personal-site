{% extends "layouts/base/base.njk" %}
{% block content %}
    <script type="module" src='/js/base.js'></script>
    <div class="bg-base-100 relative z-[1] min-h-[95vh] h-[95vh] max-h-[95vh] shadow-[0px_20px_10px_-10px] shadow-neutral/50 touch-none overscroll-contain">
        <div class="grid grid-cols-1 xl:grid-cols-5 justify-items-center xl:justify-items-start mt-10">
            <div data-container="article-frame" class="m-2 w-full xl:w-auto xl:col-span-4 h-[65vh] xl:h-[80vh] border-primary border-2 rounded-md transition-shadow ease-in-out delay-100 hover:shadow-[0px_0px_20px_-3px] hover:shadow-primary overflow-auto overflow-y-scroll">
                <div data-container="article-content" class="p-5 font-fira-mono text-md font-semibold text-base-content">
                    {{ content | safe }}
                </div>
            </div>
            <div class="hidden xl:block mx-8 xl:col-span-1">
                {% include "table-of-contents/table-of-contents.njk" %}
            </div>

        </div>
        {# </div> #}
    </div>
    <script type="module" src='/js/terminal.js'></script>
{% endblock %}